<header class="fixed inset-x-0 top-0 z-50">
    <!-- Wrapper con fondo sutil -->
    <div
        class="header-scroll-glass border-b border-primary-foreground/5 bg-primary/30 backdrop-blur-md"
    >
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <!-- Left: logo + brand -->
                <a
                    href="/"
                    class="flex items-center gap-3 group"
                    aria-label="ChequeAR - Inicio"
                >
                    <img
                        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/logo-VDUMAHCUfpOajHQRtETOoJcJnDukdh.png"
                        alt="ChequeAR logo"
                        class="h-10 w-10 transition-transform duration-300 group-hover:scale-105"
                        style="filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.7));"
                    />
                    <span class="flex flex-col leading-tight">
                        <span
                            class="text-lg sm:text-xl font-bold tracking-tight text-primary-foreground"
                        >
                            Cheque<span class="text-accent">AR</span>
                        </span>
                        <span
                            class="hidden sm:block text-xs font-medium text-primary-foreground/70 -mt-0.5"
                        >
                            Verificá cheques en segundos
                        </span>
                    </span>
                </a>

                <!-- Center: desktop nav -->
                <nav
                    class="hidden md:flex items-center gap-8"
                    aria-label="Main navigation"
                >
                    <a
                        href="#features"
                        class="text-sm font-medium text-primary-foreground/70 hover:text-primary-foreground transition-colors"
                    >
                        Cómo funciona
                    </a>
                    <a
                        href="#pricing"
                        class="text-sm font-medium text-primary-foreground/70 hover:text-primary-foreground transition-colors"
                    >
                        Planes
                    </a>
                    <a
                        href="#faq"
                        class="text-sm font-medium text-primary-foreground/70 hover:text-primary-foreground transition-colors"
                    >
                        FAQ
                    </a>
                </nav>

                <!-- Right -->
                <div class="flex items-center gap-4">
                    <!-- CTA desktop -->
                    <a
                        href="#download"
                        class="hidden sm:inline-flex h-9 items-center justify-center rounded-full bg-primary-foreground px-5 text-sm font-semibold text-primary shadow-sm hover:bg-primary-foreground/90 transition-colors"
                    >
                        Descargar App
                    </a>

                    <!-- Mobile menu button -->
                    <button
                        id="mobile-menu-button"
                        class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-primary-foreground/20 bg-primary-foreground/10 text-primary-foreground hover:bg-primary-foreground/20 transition-colors sm:hidden"
                        aria-controls="mobile-menu"
                        aria-expanded="false"
                        aria-label="Abrir menú"
                    >
                        <svg
                            class="h-5 w-5"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden">
        <div
            class="border-t border-primary-foreground/10 bg-primary/95 backdrop-blur-xl px-4 py-6"
        >
            <nav class="flex flex-col gap-4">
                <a
                    href="#features"
                    class="rounded-xl px-4 py-3 text-base font-medium text-primary-foreground/80 hover:bg-primary-foreground/10 hover:text-primary-foreground transition-colors"
                >
                    Cómo funciona
                </a>
                <a
                    href="#pricing"
                    class="rounded-xl px-4 py-3 text-base font-medium text-primary-foreground/80 hover:bg-primary-foreground/10 hover:text-primary-foreground transition-colors"
                >
                    Planes
                </a>
                <a
                    href="#faq"
                    class="rounded-xl px-4 py-3 text-base font-medium text-primary-foreground/80 hover:bg-primary-foreground/10 hover:text-primary-foreground transition-colors"
                >
                    FAQ
                </a>

                <div class="mt-4 border-t border-primary-foreground/10 pt-6">
                    <a
                        href="#download"
                        class="flex h-12 w-full items-center justify-center rounded-xl bg-primary-foreground text-base font-semibold text-primary hover:bg-primary-foreground/90 transition-colors"
                    >
                        Descargar App
                    </a>
                </div>
            </nav>
        </div>
    </div>
</header>

<style>
    @supports (animation-timeline: scroll()) {
        .header-scroll-glass {
            background-color: transparent;
            backdrop-filter: blur(0px);
            border-bottom-color: transparent;

            animation: header-scroll linear both;
            animation-timeline: scroll();
            animation-range: 0px 120px;
        }

        @keyframes header-scroll {
            to {
                background-color: oklch(0.28 0.08 255 / 0.85);
                backdrop-filter: blur(16px);
                border-bottom-color: oklch(0.99 0 0 / 0.1);
            }
        }
    }
</style>

<script>
    (function () {
        const menuBtn = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        if (!menuBtn || !mobileMenu) return;

        const openIcon = `
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
    `;

        const closeIcon = `
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    `;

        menuBtn.addEventListener("click", () => {
            const isOpen = !mobileMenu.classList.contains("hidden");
            mobileMenu.classList.toggle("hidden");
            menuBtn.setAttribute("aria-expanded", String(!isOpen));
            menuBtn.innerHTML = isOpen ? openIcon : closeIcon;
        });
    })();
</script>
