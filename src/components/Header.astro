<header class="fixed inset-x-0 top-0 z-50">
    <!-- Wrapper con fondo sutil -->
    <div
        class="header-scroll-glass relative z-50 border-b border-white/5 bg-primary/40 backdrop-blur-xl backdrop-saturate-150 transition-all duration-300"
        id="header-nav"
    >
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <!-- Left: logo + brand -->
                <a
                    href="/"
                    class="flex items-center gap-3 group"
                    aria-label="ChequeAR - Inicio"
                >
                    <img
                        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/logo-VDUMAHCUfpOajHQRtETOoJcJnDukdh.png"
                        alt="ChequeAR logo"
                        class="h-10 w-10 transition-transform duration-300 group-hover:scale-105"
                        style="filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.7));"
                    />
                    <span class="flex flex-col leading-tight">
                        <span
                            class="text-lg sm:text-xl font-bold tracking-tight text-white"
                        >
                            Cheque<span class="text-accent">AR</span>
                        </span>
                        <span
                            class="hidden sm:block text-xs font-medium text-white/50 -mt-0.5"
                        >
                            Verificá cheques en segundos
                        </span>
                    </span>
                </a>

                <!-- Center: desktop nav -->
                <nav
                    class="hidden md:flex items-center gap-8"
                    aria-label="Main navigation"
                >
                    <a
                        href="#como-funciona"
                        class="text-sm font-medium text-white/60 hover:text-accent transition-colors duration-300"
                    >
                        Cómo funciona
                    </a>
                    <a
                        href="#contacto"
                        class="text-sm font-medium text-white/60 hover:text-accent transition-colors duration-300"
                    >
                        Contacto
                    </a>
                </nav>

                <!-- Right -->
                <div class="flex items-center gap-4">
                    <!-- CTA desktop -->
                    <a
                        href="#download"
                        class="hidden sm:inline-flex h-10 items-center justify-center rounded-full bg-white/10 border border-white/20 px-6 text-sm font-medium text-white hover:bg-white/20 transition-colors duration-300"
                    >
                        Descargar App
                    </a>

                    <!-- Mobile menu button -->
                    <button
                        id="mobile-menu-button"
                        class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/10 bg-white/5 text-white hover:bg-white/10 transition-colors duration-300 md:hidden relative z-50"
                        aria-controls="mobile-menu"
                        aria-expanded="false"
                        aria-label="Abrir menú"
                    >
                        <svg
                            class="h-5 w-5 menu-icon-open"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                        <svg
                            class="h-5 w-5 menu-icon-close absolute inset-0 m-auto hidden"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile menu Fullscreen Overlay -->
    <div
        id="mobile-menu"
        class="hidden md:hidden fixed inset-0 z-40 bg-primary/40 backdrop-blur-2xl backdrop-saturate-150 flex-col justify-center items-center h-screen px-6 transition-opacity duration-300 opacity-0"
    >
        <!-- Glows de fondo para el menu móvil -->
        <div
            class="absolute top-1/4 -left-32 w-64 h-64 bg-accent/20 rounded-full blur-[100px] pointer-events-none"
        >
        </div>
        <div
            class="absolute bottom-1/4 -right-32 w-64 h-64 bg-accent/20 rounded-full blur-[100px] pointer-events-none"
        >
        </div>

        <nav
            class="flex flex-col gap-10 items-center text-center relative z-10 w-full"
        >
            <a
                href="#como-funciona"
                class="mobile-link text-3xl sm:text-4xl font-light text-white/70 hover:text-accent transition-colors duration-300"
            >
                Cómo funciona
            </a>
            <a
                href="#contacto"
                class="mobile-link text-3xl sm:text-4xl font-light text-white/70 hover:text-accent transition-colors duration-300"
            >
                Contacto
            </a>

            <a
                href="#download"
                class="mobile-link mt-8 w-full max-w-[280px] flex mx-auto h-14 items-center justify-center rounded-full bg-accent text-lg font-medium text-accent-foreground shadow-[0_0_30px_-5px_var(--color-accent)] hover:shadow-[0_0_40px_-5px_var(--color-accent)] hover:bg-accent/90 transition-all duration-300"
            >
                Descargar App
            </a>
        </nav>
    </div>
</header>

<style>
    @supports (animation-timeline: scroll()) {
        .header-scroll-glass {
            background-color: transparent;
            backdrop-filter: blur(0px) saturate(100%);
            border-bottom-color: transparent;
            box-shadow: none;

            animation: header-scroll linear both;
            animation-timeline: scroll();
            animation-range: 0px 120px;
        }

        @keyframes header-scroll {
            to {
                background-color: rgba(13, 9, 20, 0.4);
                backdrop-filter: blur(24px) saturate(150%);
                border-bottom-color: rgba(255, 255, 255, 0.1);
                box-shadow:
                    0 10px 40px -10px rgba(0, 0, 0, 0.5),
                    inset 0 -1px 0 0 rgba(255, 255, 255, 0.05); /* Outer shadow + inner glow edge */
            }
        }
    }
</style>

<script>
    (function () {
        const menuBtn = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        const headerNav = document.getElementById("header-nav");
        const iconOpen = menuBtn?.querySelector(".menu-icon-open");
        const iconClose = menuBtn?.querySelector(".menu-icon-close");
        const mobileLinks = document.querySelectorAll(".mobile-link");

        if (!menuBtn || !mobileMenu || !headerNav) return;

        function toggleMenu() {
            const isClosing = !mobileMenu.classList.contains("hidden");

            if (isClosing) {
                // Cerrar menú
                mobileMenu.classList.remove("opacity-100");
                mobileMenu.classList.add("opacity-0");

                setTimeout(() => {
                    mobileMenu.classList.add("hidden");
                    mobileMenu.classList.remove("flex");
                }, 300); // Esperar la transición

                menuBtn.setAttribute("aria-expanded", "false");
                iconClose?.classList.add("hidden");
                iconOpen?.classList.remove("hidden");

                document.body.style.overflow = "";
                // Restaurar fondo del header
                headerNav.classList.remove(
                    "bg-transparent",
                    "backdrop-blur-none",
                    "border-transparent",
                );
            } else {
                // Abrir menú
                mobileMenu.classList.remove("hidden");
                mobileMenu.classList.add("flex");

                // Pequeño timeout para que se aplique la clase flex antes de iniciar transición
                setTimeout(() => {
                    mobileMenu.classList.remove("opacity-0");
                    mobileMenu.classList.add("opacity-100");
                }, 10);

                menuBtn.setAttribute("aria-expanded", "true");
                iconOpen?.classList.add("hidden");
                iconClose?.classList.remove("hidden");

                document.body.style.overflow = "hidden"; // Bloquear scroll
                // Quitar fondo del header para que no choque con el blur total
                headerNav.classList.add(
                    "bg-transparent",
                    "backdrop-blur-none",
                    "border-transparent",
                );
            }
        }

        menuBtn.addEventListener("click", toggleMenu);

        // Cerrar menú al hacer clic en un link interno
        mobileLinks.forEach((link) => {
            link.addEventListener("click", () => {
                // Solo si está abierto
                if (!mobileMenu.classList.contains("hidden")) {
                    toggleMenu();
                }
            });
        });
    })();
</script>
